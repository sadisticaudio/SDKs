<?xml version="1.0" encoding="UTF-8"?>
<view type="View" id="MainView">
    <bounds x="0" y="0" width="420" height="704"/>
    <image id="background" src="images/background_main.png" stretch="true"/>
    
    <view type="StaticText" id="FilePathLabel">
        <bounds x="10" y="10" width="65" height="18"/>
        <font typeface="Arial" height="14" bold="1" italic="0" underlined="0"/>
        <color id="text" red="238" green="238" blue="238" alpha="255"/>
        <justification horizontal="left" vertical="bottom"/>
        <text string="File:"/>
        <intercepts_mouse value="false"/>
    </view>

    <view type="StaticText" id="FilePath">
        <bounds x="60" y="10" width="245" height="18"/>
        <font typeface="Arial" height="14" bold="0" italic="0" underlined="0"/>
        <color id="text" red="238" green="238" blue="238" alpha="255"/>
        <justification horizontal="left" vertical="bottom"/>
        <text string=""/>
        <intercepts_mouse value="true"/>
    </view>
    
    <view type="Button" id="RevealToUserButton">
        <bounds x="310" y="10" width="100" height="20"/>
        <font typeface="Arial" height="14" bold="0" italic="0" underlined="0"/>
        <color id="text" red="238" green="238" blue="238" alpha="255"/>
        <text string="Show in Finder"/>
        <image_list id="state" stretch="true">
            <image id="" src="images/button.png"/>
            <image id="" src=""/>
        </image_list>
    </view>
    
    <view type="StaticText" id="TableLabel">
        <bounds x="10" y="40" width="65" height="18"/>
        <font typeface="Arial" height="14" bold="1" italic="0" underlined="0"/>
        <color id="text" red="238" green="238" blue="238" alpha="255"/>
        <justification horizontal="left" vertical="bottom"/>
        <text string="Table:"/>
        <intercepts_mouse value="false"/>
    </view>
    
    <view type="Popup" id="TablePopup">
        <bounds x="60" y="40" width="150" height="22"/>
        <font typeface="Arial" height="14" bold="0" italic="0" underlined="0"/>
        <color id="text" red="238" green="238" blue="238" alpha="255"/>
        <justification horizontal="left" vertical="bottom"/>
        <image id="background" src="images/dropdown.png" stretch="true"/>
    </view>
	
	<view type="Button" id="HelpButton">
		<bounds x="390" y="46 " width="20" height="18"/>
		<font typeface="Arial" height="14" bold="1" italic="0" underlined="0"/>
		<color id="text" red="238" green="238" blue="238" alpha="255"/>
		<text string=" ? "/>
		<image_list id="state" stretch="true">
			<image id="" src="images/button.png"/>
			<image id="" src=""/>
		</image_list>
	</view>
	
    <view type="TableList" id="SurfacesList">
        <bounds x="10" y="80" width="400" height="614"/>
        <header height="0">
            <header_item title_string="Type" width="398"/>
        </header>
    </view>
    
</view>
